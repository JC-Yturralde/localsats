// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @default(cuid()) @id
  userId        String @unique
  pgpPrivateKeyEncrypted String?
  pgpPublicKey  String?
  email         String?
  seenWelcome   Boolean @default(false)
  createDate    DateTime  @default(now()) @map(name: "created_at")
  updatedPrivateKeysDate DateTime?
  posts         Post[]
  chatPaywalls  chatPaywalls[]
  @@map(name: "users")
}

model Post {
  id        String @default(cuid()) @id
  lat   Float
  lng Float
  type String
  amount Float
  user User @relation(fields: [userId], references: [userId])
  userId  String
  postedAt     DateTime  @default(now()) @map(name: "created_at")
  messages Message[]
  deletedDate DateTime?
  chatPaywalls chatPaywalls[]
  @@map(name: "posts")
}

model chatPaywalls {
  id  String @default(cuid()) @id
  user User @relation(fields: [userId], references: [userId])
  userId String
  recipientUserId String
  messages Message[]
  deletedDate DateTime?
  post Post @relation(fields: [postId], references: [id])
  postId String
  createdAt DateTime  @default(now()) @map(name: "created_at")
}

model Message {
  id            String @default(cuid()) @id
  body          String
  fromUserId    String
  toUserId      String
  sentDate      DateTime  @default(now()) @map(name: "created_at")
  seen          Boolean @default(false)
  post          Post @relation(fields: [postId], references: [id])
  postId        String
  chatPaywall   chatPaywalls @relation(fields: [chatPaywallId], references: [id])
  chatPaywallId String
  deletedDate DateTime?
  @@map(name: "messages")
}

model lnurlAuthKey {
  id            String @default(cuid()) @id
  k1            String @unique
  key           String?
}